@model NYBE.Models.ManageViewModels.ChangeNameViewModel

@{
    ViewData["Title"] = "ChangeName";
}

<h2 class="text-center">Change Name</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Manage" asp-action="ChangeName" method="post" class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="FirstName" class="form-control" placeholder="@Model.OldFirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="LastName" class="form-control" placeholder="@Model.OldLastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <button type="button" onclick="history.go(-1)" class="btn btn-primary">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
