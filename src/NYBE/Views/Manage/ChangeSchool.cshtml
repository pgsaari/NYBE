@model NYBE.Models.ManageViewModels.ChangeSchoolViewModel

@{
    ViewData["Title"] = "Change School";
}

<h2 class="text-center">Change School</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Manage" asp-action="ChangeSchool" method="post" class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <select asp-for="School" class="form-control">
                        @foreach (School school in Model.Schools)
                        {
                            if (school.ID == Model.OldSchool) {
                                <option value="@school.ID" selected>@school.Name</option>
                            } else {
                                <option value="@school.ID">@school.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <button type="button" onclick="history.go(-1)" class="btn btn-primary">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
