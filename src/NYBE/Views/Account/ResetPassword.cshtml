@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal">
            <input asp-for="Code" type="hidden" />
            <hr />
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="Password" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 col-sm-offset-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
                    <button type="submit" class="btn btn-success">Reset</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
